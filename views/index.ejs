<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Cent By Cent</title>

  <link rel="icon" href="/images/favicon.png" type="image/x-icon">
  <link rel="stylesheet" href="/styles.css">

  <style>
    .count {
      font-size: 5rem;
      font-weight: bold;
      color: #333;
      display: inline-block;
      transition: transform 0.1s ease-in-out;
    }

    .animate-instant {
      transform: scale(1.9) rotate(30deg);
    }

    .animate-return {
      transform: scale(1) rotate(0deg);
    }

    /* 로그인 버튼 위치 및 기본 스타일 */
    .login-btn {
      position: fixed;
      top: 20px;
      right: 20px;
      padding: 10px 16px;
      background-color: #007BFF;
      color: white;
      border: none;
      border-radius: 6px;
      font-size: 14px;
      cursor: pointer;
      z-index: 9999;
    }

    .login-btn:hover {
      background-color: #0056b3;
    }
  </style>
</head>
<body>
  <div class="container">
    <h1>Welcome to Cent By Cent!</h1>
    <p><em>100 cents at a time, change the world.</em></p>

    <button id="donateButton">Donate Now</button>

    <div id="counter" class="count">0</div>
  </div>

  <!-- 로그인 버튼 추가 -->
  <button class="login-btn">로그인</button>

  <!-- 로컬 경로로 파일 지정 (웹 서버 환경에서) -->
  <audio id="clickSound" src="sounds/pop.mp3" preload="auto"></audio>

  <script>
    let clickCount = 0;

    const button = document.getElementById('donateButton');
    const counter = document.getElementById('counter');
    const sound = document.getElementById('clickSound');

    button.addEventListener('click', async function () {
      sound.currentTime = 0;
      sound.play();

      button.style.transform = 'scale(1.2)';
      button.style.boxShadow = '0 0 20px #00c6ff';

      clickCount++;
      counter.innerText = clickCount;

      counter.classList.remove('animate-instant', 'animate-return');
      void counter.offsetWidth;
      counter.classList.add('animate-instant');

      setTimeout(() => {
        counter.classList.add('animate-return');
      }, 50);

      setTimeout(() => {
        counter.classList.remove('animate-instant', 'animate-return');
      }, 150);

      try {
        await fetch('/donate', { method: 'POST' });
      } catch (err) {
        console.error('Donation failed:', err);
      }

      setTimeout(() => {
        button.style.transform = 'scale(1)';
        button.style.boxShadow = '';
      }, 1500);
    });
  </script>
</body>
</html>
